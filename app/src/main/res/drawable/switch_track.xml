<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Track when switch is ON -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:width="30dp" android:height="20dp"/>
            <solid android:width="1dp" android:color="@color/color_button"/>
            <corners android:radius="50dp"/>
        </shape>
    </item>
    <!-- Track when switch is OFF -->
    <item>
        <shape android:shape="rectangle">
            <size android:width="30dp" android:height="20dp"/>
            <solid android:width="1dp" android:color="@color/color_background"/>
            <corners android:radius="50dp"/>
            <stroke android:color="@color/color_border" android:width="1dp" />
        </shape>
    </item>
</selector>